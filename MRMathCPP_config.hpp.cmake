int MRMathCPP_version_patch() { return MRMATHCPP_VERSION_PATCH; }
int MRMathCPP_version_tweak() { return MRMATHCPP_VERSION_TWEAK; }

bool MRMathCPP_support_mraster() { return MRMATHCPP_OPT_MRASTER; }

