#ifndef CONFIG_H
#define CONFIG_H

#define MRMATHCPP_PROJECT_NAME  "@CMAKE_PROJECT_NAME@"

#define MRMATHCPP_CONFIG_DATE   "@MRMATHCPP_CONFIG_DATE@"
#define MRMATHCPP_CONFIG_OS     "@CMAKE_HOST_SYSTEM_VERSION@"
#define MRMATHCPP_CONFIG_CMVER  "@CMAKE_VERSION@"
#define MRMATHCPP_CONFIG_ARCH   "@CMAKE_HOST_SYSTEM_PROCESSOR@"
#define MRMATHCPP_CONFIG_ENDIAN "@CMAKE_CXX_BYTE_ORDER@"
#define MRMATHCPP_CONFIG_COMPID "@CMAKE_CXX_COMPILER_ID@"

#define MRMATHCPP_VERSION       "@MRMathCPP_VERSION@"
#define MRMATHCPP_VERSION_MAJOR @MRMathCPP_VERSION_MAJOR@
#define MRMATHCPP_VERSION_MINOR @MRMathCPP_VERSION_MINOR@
#define MRMATHCPP_VERSION_PATCH @MRMathCPP_VERSION_PATCH@
#define MRMATHCPP_VERSION_TWEAK @MRMathCPP_VERSION_TWEAK@
